    <script>
        const noBtn = document.getElementById('noBtn');
        const cartoonBox = document.getElementById('cartoon-box');
        const question = document.getElementById('question');

        // Logic to move the NO button
        function moveNo() {
            // Show the begging cartoon on first "No" attempt
            cartoonBox.style.display = 'block';
            question.innerHTML = "Oh No! Please click Yes... <br> Why are you avoiding? ü•∫";

            // Random coordinates for button escape
            const padding = 50;
            const x = Math.random() * (window.innerWidth - noBtn.offsetWidth - padding);
            const y = Math.random() * (window.innerHeight - noBtn.offsetHeight - padding);
            
            noBtn.style.position = 'fixed';
            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
            noBtn.style.transform = 'none'; // Clear the initial translateX
        }

        // Handle Yes Button
        function goToThanks() {
            document.getElementById('step1').style.display = 'none';
            document.getElementById('step2').style.display = 'block';
            noBtn.style.display = 'none';
        }

        // Handle Next Button to Final Wish
        function showBirthday() {
            document.getElementById('step2').style.display = 'none';
            document.getElementById('final-wish').style.display = 'block';
            
            // Extra spark: Change background slightly
            document.body.style.background = "#000";
        }
    </script>
